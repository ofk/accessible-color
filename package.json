{
  "name": "accessible-color",
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "author": "ofk",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "dev": "parcel serve --dist-dir .parcel-dist 'examples/index.html'",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint --aei '**/*.{jsx,tsx}'",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "lint-fix:stylelint": "npm run lint:stylelint -- --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "chroma-js": "^2.4.2",
    "culori": "^3.2.0"
  },
  "devDependencies": {
    "@bjornlu/colorblind": "^1.0.3",
    "@emotion/css": "^11.11.2",
    "@ofk/eslint-config-recommend": "^6.1.2",
    "@ofk/stylelint-config-recommend": "^6.0.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/chroma-js": "^2.4.3",
    "@types/culori": "^2.0.4",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.10.3",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.1.0",
    "prettier-package-json": "^2.8.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
    "*.{js,ts}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ],
    "*.{jsx,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "stylelint --fix --aei",
      "prettier --write"
    ]
  }
}
