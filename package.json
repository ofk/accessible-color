{
  "private": true,
  "name": "acolor",
  "version": "0.0.1",
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "dev": "parcel serve --dist-dir .parcel-dist 'examples/index.html'",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint:stylelint": "stylelint --aei '**/*.{jsx,tsx}'",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "lint-fix:stylelint": "npm run lint:stylelint -- --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "chroma-js": "^2.4.2"
  },
  "devDependencies": {
    "@bjornlu/colorblind": "^1.0.3",
    "@emotion/css": "^11.10.5",
    "@ofk/eslint-config-recommend": "^5.3.1",
    "@ofk/stylelint-config-recommend": "^4.2.0",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/chroma-js": "^2.1.4",
    "@types/jest": "^29.2.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.2",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.3",
    "prettier-package-json": "^2.8.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.0.7",
    "stylelint": "^14.16.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
    "*.{js,ts}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ],
    "*.{jsx,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "stylelint --fix --aei",
      "prettier --write"
    ]
  }
}
